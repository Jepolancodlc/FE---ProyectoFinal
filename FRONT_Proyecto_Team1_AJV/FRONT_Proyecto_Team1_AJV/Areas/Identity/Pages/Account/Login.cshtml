@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row h-100 justify-content-center align-items-center">
    <div class="col-8 col-md-8 col-lg-6">
        <!-- Form -->
        <form id="account" method="post">
            <div class="card">
                <div class="card-header">
                    <img id="logoImg" src="~/img/TnetLogo.png" alt="Logo" />
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" placeholder="Usuario" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" placeholder="Contraseña" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button id="btnLogin" type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>

                </div>


                <div class="card-footer">

                    <div class="form-group" id="fgFooter">
                        <p id="p1">
                            <a id="forgot-password" asp-page="./ForgotPassword">Has olvidado la contraseña?</a>
                        </p>
                        <p id="p2">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse</a>
                        </p>
                    </div>
                </div>
            </div>
        </form>




        <!-- Form end -->
    </div>
</div>







@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}